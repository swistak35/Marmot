= form_for(@link) do |link_form|
  .form
    = link_form.label :title, t(:link_title)
    = link_form.text_field :title, :class => 'width100'
    %br/
    = link_form.label :url, t(:link_url)
    = link_form.text_field :url, :class => 'width100'
    %br/
    = link_form.label :category, t(:link_cat)
    = link_form.select :category_id, generate_category_options(@categories), :class => 'width100'
    %br/
    = link_form.submit t(:update)
